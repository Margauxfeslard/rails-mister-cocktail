<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/collection/cocktail/1600x900);">
  <div class="container">
    <h1>COCKTAILMANIA</h1>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-outline-warning"%>
  </div>
</div>

  <div class="d-flex card-category">
    <% @cocktails.each do |cocktail| %>
    <div class="card-body border m-3 p-0 rounded">
      <img src="https://source.unsplash.com/random/800x600" class="card-img-top rounded-top" alt="">
      <h5 class="card-title p-1"><%= cocktail.name %></h5>
      <%= link_to "See details", cocktail_path(cocktail), class: "btn btn-outline-dark"%>
    </div>
  <% end %>
</div>

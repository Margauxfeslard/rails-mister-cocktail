<h2><%= @cocktail.name %></h2>

  <% @doses.each do |dose| %>
  <p><%= dose.description %>
  <%= dose.amount %></p>
  <%= link_to "Delete a dose", dose_path(dose), method: :delete, class: "btn btn-primary"%>
  <% end %>

  <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"%>
  <%= link_to "Back to list", cocktails_path, class: "btn btn-primary"%>


